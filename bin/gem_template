#!/bin/bash

echo ""
git clone https://github.com/winton/gem_template.git $1

if [ $? -eq 0 ]; then
  cd $1
else
  exit 1
fi

echo -e "\nFetching..."
git fetch

echo -e "\nWriting .ruby-gemset..."
echo $1 > .ruby-gemset

echo -e "\nInstalling gems..."
gem install bundler && bundle

# echo "\ngem_template -> $1..."
# cd $1 && stencil $1

# -- replace
# #!/usr/bin/env ruby
#
# require File.expand_path("../../lib/gem_template", __FILE__)